{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@shaders/*": ["./src/shaders/*"]
    }
  },
  "include": ["src"]
}
